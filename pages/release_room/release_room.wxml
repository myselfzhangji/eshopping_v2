<!--pages/release/release.wxml-->

<view class="page">
  <view class="page__hd">
    <view class='title_tab'>发布者</view>
    <block wx:key="index" wx:for='{{ role }}'>
      <view class='select' id='{{index}}' bindtap='chooseRole'>
        <block wx:if="{{index==clickRoleId}}">
          <button class='selects' type="primary" style='color:black' size="mini" >
            {{ item }}
          </button>
        </block>
        <block wx:else>
          <button class='noselects' style='color:black' size="mini">
            {{ item }}
          </button>
        </block>
      </view>
    </block>

    <view class='title_tab'>发布者</view>
    <block wx:key="index" wx:for='{{ role }}'>
      <view class='select' id='{{index}}' bindtap='chooseRole'>
        <block wx:if="{{index==clickRoleId}}">
          <button class='selects' type="primary" style='color:black' size="mini" >
            {{ item }}
          </button>
        </block>
        <block wx:else>
          <button class='noselects' style='color:black' size="mini">
            {{ item }}
          </button>
        </block>
      </view>
    </block>

    <block>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"></image>
      <button type='primary' bindtap='addMall'>发布房源</button>
      <button type='primary' bindtap='getMall'>查看我的发布</button>
    </block>
  </view>
</view>

