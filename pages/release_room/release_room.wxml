    <view class='select' id='{{index}}' bindtap='chooseRole'>
      <block wx:if="{{index==clickRoleId}}">
        <button class='selects' style='color:black'>
          {{ item }}
        </button>
      </block>
      <block wx:else>
        <button class='noselects' style='color:black'>
          {{ item }}
        </button>
      </block>
    </view>
  </block>
</view>